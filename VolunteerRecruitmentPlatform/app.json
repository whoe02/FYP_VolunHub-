{
  "expo": {
    "name": "VolunteerRecruitmentPlatform",
    "slug": "VolunteerRecruitmentPlatform",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "notifications": {
      "projectId": "13dccab0-f698-4969-9f00-1d77105d97f5"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app requires location access to validate your attendance at events.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow this app to access your location while it is in use or in the background to validate attendance."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },

      "package": "com.yourcompany.volunteerrecruitmentplatform",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"

      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow this app to access your location for validating attendance at events.",
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      "expo-camera"
    ],
    "extra": {
      "eas": {
        "projectId": "13dccab0-f698-4969-9f00-1d77105d97f5"
      }
    }
  }
}
